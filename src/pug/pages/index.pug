extends ../elements/layout-page

block data
  -
    title = "Rx4Route: create account"

    let createPages = [
      { name: "Create: oauth", url: "create-oauth-page.html" },
      { name: "Create: enter email", url: "create-enter-email-page.html" },
      { name: "Create: verify email", url: "create-verify-email-page.html" },
      { name: "Create: enter phone", url: "create-enter-phone-page.html" },
      { name: "Create: verify phone", url: "create-verify-phone-page.html" },
      { name: "Create: success", url: "create-success-page.html" },
      { name: "UI", url: "ui-page.html" },
    ]

    let dialogPages = [
      { name: "Dialog activate", url: "dialog-activate-page.html" },
      { name: "Dialog successfully", url: "dialog-successfully-page.html" },
      { name: "Dialog steps: order", url: "dialog-steps-order-page.html" },
      { name: "Dialog steps: route", url: "dialog-steps-route-page.html" },
      { name: "Dialog steps: account", url: "dialog-steps-account-page.html" },
      { name: "Dialog steps: driver", url: "dialog-steps-driver-page.html" },
      { name: "Dialog steps: app", url: "dialog-steps-app-page.html" },
      { name: "Dialog steps: complete", url: "dialog-steps-complete-page.html" },
    ]

    let accountPages = [
      { name: "Account: plan month", url: "account-plan-month-page.html" },
      { name: "Account: plan year", url: "account-plan-year-page.html" },
      { name: "Account: message", url: "account-message-page.html" },
      { name: "Account: subscription trial", url: "account-subscription-trial-page.html" },
      { name: "Account: subscription active", url: "account-subscription-active-page.html" },
    ]


block content
  mixin page-list({list})
    ul
      each it in list
        li
          a(href=it.url) #{it.url} ---- #{it.name}
  style.
    body {
      --color-main: #4682b4;
      --color-bg: #ffffff;
      --color-text: #4d5156;
      padding: 20px 40px;
      font-family: sans-serif;
      font-size: 16px;
      line-height: 22px;
      font-weight: 400;
      color: var(--color-text);
      background-color: var(--color-bg);
    }
    h1 {
      color: var(--color-main);
    }
    ul,
    ol {
      margin-top: 20px;
      margin-bottom: 0;
    }
    li {
      margin-bottom: 10px;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    a:visited {
      color: var(--color-text);
    }
    a:hover,
    a:focus {
      color: var(--color-main);
    }

  h1=title

  h2 Pages
  +page-list({list: createPages})
  +page-list({list: dialogPages})
  +page-list({list: accountPages})
