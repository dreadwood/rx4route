block content
  mixin page-list({list})
    ul
      each it in list
        li
          a(href=it.url) #{it.url} ---- !{it.name}
  style.
    body {
      --color-main: #4682b4;
      --color-bg: #ffffff;
      --color-text: #4d5156;
      padding: 20px 40px;
      font-family: sans-serif;
      font-size: 16px;
      line-height: 22px;
      font-weight: 400;
      color: var(--color-text);
      background-color: var(--color-bg);
    }
    h1 {
      color: var(--color-main);
    }
    ul,
    ol {
      margin-top: 20px;
      margin-bottom: 0;
    }
    li {
      margin-bottom: 10px;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    a:visited {
      color: var(--color-text);
    }
    a:hover,
    a:focus {
      color: var(--color-main);
    }

  h1=title

  h2 Trial period
  +page-list({ list: orderPages })

  h2 Pages
  +page-list({ list: createPages })
  +page-list({ list: dialogPages })
  +page-list({ list: accountPages })
  +page-list({ list: authorizationPages })



