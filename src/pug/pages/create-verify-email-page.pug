extends ../elements/layout-create-account
include ../elements/images
include ../components/btn-back
include ../components/f-field-verify

block data
  -
    title = "Rx4Route: create account — verify email"
    name = "Create <br> Account"
    step = 1


block content
  .ca-content.ca-content--form
    +btn-back({})
    .ca-content__title Verify Your Email
    .ca-content__subtitle We’ve sent a 6-character verification code to youremail@mail.com. The code expires soon.
    form.ca-form
      .ca-form__verify
        +f-field-verify({error: true})
      .ca-form__note.error Code is incorrect
      button.ca-form__link(type="button") Resend verification email
