include ../elements/head

-
  let title = ""
  let name = ""
  let step = 0

block data

doctype html
html(lang="en")
  +head({title})
  body
    section.ca-page
      .ca-page__container
        .ca-page__left
          a.ca-page__logo(href="#")
            +svg({name: "icon-logo-rx4route", width: 275, height: 50})
          h1.ca-page__title !{name}
          if step > 0
            span Step #{step} of 2
        .ca-page__right
          block content
    include ../elements/script
